{
  "name": "@hverlin/redis",
  "version": "0.0.1",
  "main": "lib/index.js",
  "description": "Redis client for node. RESP3 and redis 6/7 support",
  "homepage": "https://github.com/hverlin/redis",
  "repository": {
    "type": "git",
    "url": "https://github.com/hverlin/redis"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "ts-node test/index.ts",
    "coverage": "nyc --nycrc-path=./eng/.nycrc.json npm test",
    "lint": "eslint '**/*.{ts,js,json}'",
    "format": "prettier --write .",
    "watch": "tsc --build ./eng/tsconfig.dev.json --watch",
    "compile": "tsc --build ./eng/tsconfig.prod.json",
    "gencmd": "ts-node ./eng/gencmd.ts",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "keywords": [
    "redis",
    "resp3"
  ],
  "types": "./types/index.d.ts",
  "eslintConfig": {
    "extends": "./eng/.eslintrc.json"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
