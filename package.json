{
  "name": "@hverlin/redis",
  "version": "0.0.4",
  "main": "lib/index.js",
  "description": "Redis client for node. RESP3 and redis 6/7 support",
  "homepage": "https://github.com/hverlin/redis",
  "repository": {
    "type": "git",
    "url": "https://github.com/hverlin/redis"
  },
  "license": "MIT",
  "scripts": {
    "test": "vitest test",
    "coverage": "vitest test run --coverage",
    "lint": "eslint '**/*.{ts,js,json}'",
    "format": "prettier --write .",
    "watch": "tsc --build ./eng/tsconfig.dev.json --watch",
    "compile": "tsc --build ./eng/tsconfig.prod.json",
    "gencmd": "ts-node ./eng/gencmd.ts",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "keywords": [
    "redis",
    "resp3",
    "redis-client"
  ],
  "types": "./types/index.d.ts",
  "devDependencies": {
    "@types/node": "^16.11.47",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitest/ui": "^0.20.2",
    "c8": "^7.12.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vitest": "^0.20.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
